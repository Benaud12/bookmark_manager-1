<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
    Welcome, <%= current_user.email %>
    <% end %>
    <% if flash[:notice] %>
      <div id='flash'>
        <div class='flash info'><%= flash[:notice] %></div>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
